{
  "name": "galgame-tooling",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*",
    "examples/*"
  ],
  "scripts": {
    "build:web": "node \"packages/export-web/cli.js\" --project \"examples/MyGame\" --out \"dist/web\"",
    "serve:web": "node \"scripts/serve.js\" \"dist/web\" --port 5173",
    "dev:web": "npm run build:web && npm run serve:web",
    "dev:editor": "npx electron \"apps/editor-electron\"",
    "dev:player": "npx electron \"apps/player-electron\" -- --content \"dist/web\""
  }
}
